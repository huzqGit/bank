<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="farmerevaluate">
<sql id="Evaluate_Column_List" >
     evaluateid, farmername, farmeridnum, personality, harmonystatus, 
     respectstatus,neighborstatus, legalstatus, welfarestatus, honeststatus,
      otherstatus,recorder,recordtime
</sql>
<insert id="save" useGeneratedKeys="true" keyProperty="evaluateId" 
	parameterType="com.bank.beans.FarmerEvaluate">
	insert into t_farmer_evaluate
	<trim prefix="(" suffix=")" suffixOverrides=",">
	<if test="farmerName != null">
		farmername,
	</if>
	<if test="farmerIdNum != null">
		farmeridnum,
	</if>
   	<if test="personality != null">
   		personality,
   	</if>
	<if test="harmonyStatus != null">
		harmonystatus,
	</if>
	<if test="respectStatus != null">
		respectstatus,
	</if>
	<if test="neighborStatus != null">
		neighborstatus,
	</if>
	<if test="legalStatus != null">
		legalstatus,
	</if>
 	<if test="welfareStatus != null">
 		welfarestatus,
 	</if>
	<if test="honestStatus != null">
		honeststatus,
	</if>
	<if test="otherStatus != null">
		otherstatus,
	</if>
	<if test="recorder != null">
		recorder,
	</if>
	<if test="recordTime != null">
		recordtime
	</if>
	</trim>
	<trim prefix="values (" suffix=")" suffixOverrides=",">
	<if test="farmerName != null">
		#{farmername,jdbcType=VARCHAR},
	</if>
	<if test="farmerIdNum != null">
		#{farmeridnum,jdbcType=VARCHAR},
	</if>
   	<if test="personality != null">
   		#{personality,jdbcType=VARCHAR},
   	</if>
	<if test="harmonyStatus != null">
		#{harmonystatus,jdbcType=INTEGER},
	</if>
	<if test="respectStatus != null">
		#{respectstatus,jdbcType=VARCHAR},
	</if>
	<if test="neighborStatus != null">
		#{neighborstatus,jdbcType=VARCHAR},
	</if>
	<if test="legalStatus != null">
		#{legalstatus,jdbcType=INTEGER},
	</if>
 	<if test="welfareStatus != null">
 		#{welfarestatus,jdbcType=VARCHAR},
 	</if>
	<if test="honestStatus != null">
		#{honeststatus,jdbcType=INTEGER},
	</if>
	<if test="otherStatus != null">
		#{otherstatus,jdbcType=VARCHAR},
	</if>
	<if test="recorder != null">
		#{recorder,jdbcType=VARCHAR},
	</if>
	<if test="recordTime != null">
		#{recordtime,jdbcType=TIMESTAMP}
	</if>
	</trim>
</insert>
<select id="findByPK" parameterType="Long" resultType="com.bank.beans.FarmerEvaluate">
		select 
		<include refid="Evaluate_Column_List" />
		from t_farmer_evaluate where evaluateid = #{id,jdbcType=INTEGER}
</select>
<resultMap id="farmerEvaluateList" type="com.bank.beans.FarmerEvaluate">
    <result column="evaluateId" property="id" jdbcType="BIGINT"/>
    <result column="farmerName" property="farmerName" jdbcType="VARCHAR" />
    <result column="farmerIdnum" property="farmerIdnum" jdbcType="VARCHAR" />
    <result column="personality" property="personality" jdbcType="VARCHAR" />
    <result column="harmonyStatus" property="harmonyStatus" jdbcType="VARCHAR" />
	<result column="respectStatus" property="respectStatus" jdbcType="VARCHAR" />
	<result column="neighborStatus" property="neighborStatus" jdbcType="VARCHAR" />
	<result column="legalStatus" property="legalStatus" jdbcType="INTEGER" />
	<result column="welfareStatus" property="welfareStatus" jdbcType="VARCHAR" />
	<result column="honestStatus" property="honestStatus" jdbcType="INTEGER" />
	<result column="otherStatus" property="otherStatus" jdbcType="VARCHAR" />
    <result column="recorder" property="recorder" jdbcType="VARCHAR" />
    <result column="recordTime" property="recordTime" jdbcType="DATE" />
</resultMap>
<select id="pageing" parameterType="Map" resultMap="farmerEvaluateList">
	select 
	<include refid="Evaluate_Column_List" />
	from 
	(select t.*,rownumber() over(order by recordtime desc) as rn from t_farmer_evaluate t
	<where>
		<if test="farmerName != null and farmerName != '' ">
			t.farmername like CONCAT(CONCAT('%',#{farmerName}),'%') 
		</if>
		<if test="farmerIdNum != null and farmerIdNum != ''">
		   	and t.farmeridnum like CONCAT(CONCAT('%',#{farmerIdNum}),'%')  
		</if>
		<if test="harmonyStatus != null and harmonyStatus != '' ">
			t.harmonystatus ='#{harmonyStatus}' 
		</if>
		<if test="honestStatus != null and honestStatus != '' ">
			t.honeststatus ='#{honestStatus}'
		</if>
		<if test="recorder != null and recorder != '' ">
		    and t.recoder like CONCAT(CONCAT('%',#{recoder}),'%')  
		</if>
		<if test="recordTimeBegin !=null and recordTimeBegin != ''">
		   	<![CDATA[and t.recordtime >=to_date('#{recordTimeBegin}','yyyy-mm-dd')]]>
		</if>
		<if test="recordTimeEnd !=null and recordTimeEnd != ''">
		   	<![CDATA[and t.recordtime <=to_date('#{recordTimeEnd}','yyyy-mm-dd')]]>
		</if>
	 </where>
	 )
	 <where>
	 	<if test="start != null">
	    	rn between #{start} and #{end}
	   	</if>
	 </where>
</select>
</mapper>