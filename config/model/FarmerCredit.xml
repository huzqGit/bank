<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="farmercredit">
<sql id="Credit_Column_List" >
   creditid, farmername, farmeridnum, assessdate,
   assessorgan, assessrank, timelimit, recorder, recordtime
</sql>
<insert id="save" useGeneratedKeys="true" keyProperty="creditId" 
	parameterType="com.bank.beans.FarmerCredit">
	insert into t_farmer_credit
	<trim prefix="(" suffix=")" suffixOverrides=",">
   		<if test="farmerName != null">
   			farmername,
   		</if>
  		<if test="farmerIdNum != null">
  			farmeridnum,
  		</if>
   		<if test="assessDate != null">
   			assessdate,
   		</if>
		<if test="assessOrgan != null">
			assessorgan,
		</if>
   		<if test="assessRank != null">
   			assessrank,
   		</if>
   		<if test="timeLimit != null">
   			timelimit,
   		</if>
 		<if test="recorder != null">
 			recorder,
 		</if>
   		<if test="recordTime != null">
   			recordtime
   		</if>
	</trim>
	<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="farmerName != null">
   			#{farmerName,jdbcType=VARCHAR},
   		</if>
  		<if test="farmerIdNum != null">
  			#{farmerIdNum,jdbcType=VARCHAR},
  		</if>
   		<if test="assessDate != null">
   			#{assessDate,jdbcType=DATE},
   		</if>
		<if test="assessOrgan != null">
			#{assessOrgan,jdbcType=VARCHAR},
		</if>
   		<if test="assessRank != null">
   			#{assessRank,jdbcType=VARCHAR},
   		</if>
   		<if test="timeLimit != null">
   			#{timeLimit,jdbcType=VARCHAR},
   		</if>
 		<if test="recorder != null">
 			#{recorder,jdbcType=VARCHAR},
 		</if>
   		<if test="recordTime != null">
   			#{recordTime,jdbcType=TIMESTAMP}
   		</if>
	</trim>
</insert>
<select id="findByPK" parameterType="Long" 
		resultType="com.bank.beans.FarmerCredit">
	select 
	<include refid="Credit_Column_List" />
	from t_farmer_credit where creditid = #{id,jdbcType=INTEGER}
</select>
<resultMap id="farmerCreditList" type="com.bank.beans.FarmerCredit">
    <result column="creditId" property="id" jdbcType="BIGINT"/>
    <result column="farmerName" property="farmerName" jdbcType="VARCHAR" />
    <result column="farmerIdNum" property="farmerIdNum" jdbcType="VARCHAR" />
    <result column="assessTime" property="assessTime" jdbcType="DATE" />
    <result column="assessOrgan" property="assessOrgan" jdbcType="VARCHAR" />
	<result column="assessRank" property="assessRank" jdbcType="VARCHAR" />
	<result column="timeLimit" property="timeLimit" jdbcType="VARCHAR" />
    <result column="recorder" property="recorder" jdbcType="VARCHAR" />
    <result column="recordTime" property="recordTime" jdbcType="DATE" />
</resultMap>
<select id="pageing" parameterType="Map" resultMap="farmerCreditList">
	select 
	<include refid="Credit_Column_List" />
	from 
	(select t.*,rownumber() over(order by recordtime desc) as rn from t_farmer_credit t
	<where>
		<if test="farmerName != null and farmerName != '' ">
			t.farmername like CONCAT(CONCAT('%',#{farmerName}),'%') 
		</if>
		<if test="farmerIdNum != null and farmerIdNum != ''">
		   	and t.farmeridnum like CONCAT(CONCAT('%',#{farmerIdNum}),'%')  
		</if>
		<if test="recorder != null and recorder != '' ">
		    and t.recoder like CONCAT(CONCAT('%',#{recoder}),'%')  
		</if>
		<if test="recordTimeBegin !=null and recordTimeBegin != ''">
		   	<![CDATA[and t.recordtime >=to_date('#{recordTimeBegin}','yyyy-mm-dd')]]>
		</if>
		<if test="recordTimeEnd !=null and recordTimeEnd != ''">
		   	<![CDATA[and t.recordtime <=to_date('#{recordTimeEnd}','yyyy-mm-dd')]]>
		</if>
	 </where>
	 )
	 <where>
	 	<if test="start != null">
	    	rn between #{start} and #{end}
	   	</if>
	 </where>
</select>
</mapper>